generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  HOST
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  password     String
  role         UserRole @default(CUSTOMER)
  profileImage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Restaurant {
  id         String @id @default(cuid())
  name       String
  location   String
  rating     Float?
  coverImage String
  openTiming String
}
